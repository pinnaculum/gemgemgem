#:import rgba kivy.utils.get_color_from_hex
<Viewer>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, 0.08
            orientation: 'horizontal'
            spacing: 5
            padding: 10, 10, 10, 10
            Button:
                id: history_back_button
                size_hint: 0.05, 1
                text: "<=="
                disabled: True
                on_release: root.history_back()

            Button:
                id: toc_button
                size_hint: 0.2, 1
                text: "Table of contents"
                disabled: True
                on_release: root.show_toc()

            Button:
                size_hint: 0.2, 1
                text: "Open ebook"
                bold: True
                font_size: 20
                on_release: root.show_fileload_dialog()

            Button:
                size_hint: 0.2, 1
                text: "Load from URL"
                bold: True
                font_size: 20
                on_release: root.show_urlload_dialog()

            Button:
                size_hint: 0.2, 1
                text: "Quit"
                on_release: app.stop()

        BoxLayout:
            size_hint: 1, 0.08
            orientation: 'horizontal'
            Label:
                size_hint: 0.3, 1
                id: chapter
                color: rgba("#1e90ff")
                font_size: 18
                font_family: "Times"

            Label:
                size_hint: 0.7, 1
                id: title
                color: rgba("#ffff60")
                font_size: 22
                font_family: "Times"
                text: ''

        ScrollView:
            id: scroll_view
            do_scroll_x: False
            do_scroll_y: True
            padding: 30, 30, 30, 30
            bar_width: 12
            bar_color: rgba("#00bfff")
            bar_inactive_color: rgba("#696969")
            scroll_distance: 80
            scroll_wheel_distance: 140
            scroll_type: ["bars", "content"]

            Label:
                id: page
                size_hint_x: 1
                size_hint_y: None
                text_size: self.width, None
                font_size: '20sp'
                font_family: "DejaVuSans"
                bold: True
                markup: True
                line_height: 1.5
                color: rgba("#FFF8DC")
                on_ref_press: root.link_clicked(args[1])
                height: self.texture_size[1]
                max_lines: 0
                padding: 20, 20

        BoxLayout:
            size_hint: 1, 0.08
            orientation: 'horizontal'
            spacing: 10
            padding: 10, 10, 10, 10
            Button:
                id: prev_button
                size_hint: 0.10, 1
                text: "Previous"
                disabled: True
                on_release: root.toc_prev()

            Label:
                size_hint: 0.2, 1

            Button:
                size_hint: 0.15, 1
                text: "Ko-fi"
                bold: True
                on_release:
                    import webbrowser
                    webbrowser.open("https://ko-fi.com/galacteek")

            Label:
                size_hint: 0.2, 1

            Button:
                id: next_button
                size_hint: 0.10, 1
                text: "Next"
                disabled: True
                on_release: root.toc_next()

<CoverDialog>:
    id: cover_dlg
    FloatLayout:
        pos: root.pos
        Image:
            pos: root.pos
            source: cover_dlg.cover_path

<ImagePopup>:
    id: image_popup
    FloatLayout:
        pos: root.pos
        Image:
            pos: root.pos
            source: image_popup.image_path

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            filters: ["*.epub", "*.gpub"]
            path: root.get_default_path()
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load"
                on_release:
                    root.open(filechooser.path, filechooser.selection[0])
                    root.close()
                    root.show_cover()

            Button:
                text: "Cancel"
                on_release: root.close()

<LoadFromURLDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        spacing: 30

        Label:
            size_hint: 1, 0.2
            text: 'You can pass gemini, http or IPFS URLs'

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.5
            Label:
                text: 'URL'
                size_hint: 0.10, 0.9
            TextInput:
                size_hint: 0.80, 0.9
                multiline: True
                font_size: 18
                font_family: "Courier"
                id: url

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Load"
                on_release:
                    root.open(url.text)
                    root.close()
                    root.show_cover()

            Button:
                text: "Cancel"
                on_release: root.close()
